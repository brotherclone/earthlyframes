= form_for @release do |f|
  - if @release.errors.any?
    #error_explanation
      %h2= "#{pluralize(@release.errors.count, "error")} prohibited this release from being saved:"
      %ul
        - @release.errors.full_messages.each do |msg|
          %li= msg
  =f.label :title
  =f.text_field :title
  =f.label :formatname
  =f.text_field :formatname
  =f.label :price
  =f.text_field :price
  .actions
    = f.submit 'Save'
