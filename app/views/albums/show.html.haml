.row
  .small-2.large-2.columns
    = render :partial => 'components/admin/admin_nav'
  .small-8.large-8.columns
    .admin.notice
      = notice
    %h1
      =@album.title
    %ul
      %li
        = 'Release: '+  @album.title
      %li
        = 'Type: '+ @album.title
      %li
        = 'Formats: '+ @album.title
    %p
      =@album.description
.row
  %ul{:class=>'button-group'}
    %li
      = link_to 'Edit', edit_album_path(@album), :class=>'button'
    %li
      = link_to 'Back', albums_path, :class=> 'button'
