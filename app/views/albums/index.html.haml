.albums
  .ef-breadcrumbs
    = render_breadcrumbs :tag => :span, :separator=> ""
  %h1{:class=>'page-header'} Albums
  -if @albums.length
    -@albums.each do |a|
      .album{:itemscope => true, :itemtype => 'http://schema.org/MusicGroup'}
        .cover{:itemprop=>'image'}
          %a{:href=> albums_path+'/'+a.id.to_s}
            %img{:src=>a.cover}
        .info.offset
          %h1
            %a{:href=> albums_path+'/'+a.id.to_s, :itemprop => 'name'}
              =a.title
          %h2{:itemprop => 'additionalType'}
            =a.format
          - if a.streaming_links
            %div{:class=>"album-streaming-links"}
              - a.streaming_links.each do | album_streaming_link |
                %span{:class => "album-streaming-link"}
                %a{:href => album_streaming_link.link, :class=> "streaming-link icon-only" }
                  %i{:class=> ("fab fa-" + album_streaming_link.streaming_service.icon_url)}
          - if a.brief_description
            %p{:itemprop => 'about'}
              =a.brief_description
  -else
    %p There are no published albums at this time.
