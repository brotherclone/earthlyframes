= render :partial => 'components/nav'
%h1{:class=>'page-header'} Albums
.albums
  -@albumsByDate.each do |a|
    .album
      .cover
        %a{:href=> albums_path+'/'+a.id.to_s}
          %img{:src=>a.cover}
      .info
        %h1
          %a{:href=> albums_path+'/'+a.id.to_s}
            =a.title
        %h2
          =a.format
