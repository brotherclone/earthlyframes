= render :partial => 'components/nav'

-p = Post.first(3)
-p.each do |post|
  -@cardholder << CardItem.new(post.title, post.description, post.main_image, post_path(post.id))
-s = Show.first(3)
-s.each do |show|
  -@cardholder << CardItem.new(show.title, show.brief_description, show.flyer, show_path(show.id))
-a = Album.first(3)
-a.each do |album|
  -@cardholder << CardItem.new(album.title, album.brief_description, album.cover, album_path(album.id))
-@cardholder = @cardholder.shuffle
-@cardholder = @cardholder.take(3)

