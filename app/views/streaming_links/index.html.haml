%main
  .well
    = render :partial => "components/page-heading", :locals => {  :declaration=>  title_track(@song),
                                                                  :qualifier=> "is available on these",
                                                                  :title=> pluralize_for_song(@song, "streaming_service")}
    .streaming-services
      = turbo_frame_tag "streaming_links" do
        = @streaming_links.each do |link|
          = turbo_frame_tag "streaming_link", :src=> album_song_streaming_link_url(@album, @song, link)