= render :partial=> "components/breadcrumb"
-if @show
  .show-detail
    %img{:src=>@show.flyer}
    %h1
      = @show.title
    %dl
      %dt
        Date
      %dd
        - today = Date.today
        - if @show.showdate >= today
          =@show.showdate.strftime('%F').to_s+' '+@show.showdate.strftime('%H:%M').to_s
        - else
          %strong
            This show occured in the past:
          =@show.showdate.strftime('%D').to_s
      %dt
        Location
      %dd
        = @show.location
      %dt
        Description
      %dd
        = @show.description.html_safe
        %a{:href=>@show.link}
          More Information
-else
  %p This show is not available.
  %a{:href=>shows_path} Return to Shows listing.

